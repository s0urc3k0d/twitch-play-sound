{
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "target": "es2015",
    "module": "commonJS",
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2016",
      "es2015"
    ],
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}